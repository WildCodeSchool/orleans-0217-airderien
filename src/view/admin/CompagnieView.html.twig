


<form name="compagnieForm" method="post" action="admin.php?route=updateCompagnie" class="form-horizontal" enctype="multipart/form-data" style="margin-top: 30px">
    <div class="form-group">
        <label for="descriptionCompagnie" class="col-sm-4 control-label">Description Compagnie :</label>
        <div class="col-sm-4">
            <textarea  class="form-control" name="descriptionCompagnie" id="descriptionCompagnie" rows="13" cols="1" >
                {{ compagnie.descriptionCompagnie }} </textarea>
        </div>
    </div>

    <div class="form-group">
        <label for="emailCompagnie" class="col-sm-4 control-label">Email :</label>
        <div class="col-sm-4">
            <input type="text" class="form-control" name="emailCompagnie" id="emailCompagnie"
                   placeholder="Email" value="{{ compagnie.emailCompagnie }}" />
        </div>
    </div>

    <div class="form-group">
        <label for="telCompagnie" class="col-sm-4 control-label">Tel :</label>
        <div class="col-sm-4">
            <input type="text" class="form-control" name="telCompagnie" id="telCompagnie"
                   placeholder="Tel" value="{{ compagnie.telCompagnie }}" />
        </div>
    </div>
    <div class="form-group" style="margin-left: 29%"> {% if compagnie.lienPhotoCompagnie  %}
            <label for="imageactuelle">Image actuelle </label> <img src="images/photos/{{ compagnie.lienPhotoCompagnie }}" alt="" id="imageactuelle" style="height: 200px"/>
        {% endif %}</div>
    <div class="form-group">
        <label for="lienPhotoCompagnie" class="col-sm-4 control-label">Photo :</label>
        <div class="col-sm-4">
            <input type="file" name="lienPhotoCompagnie" id="lienPhotoCompagnie"
                   value="{{ compagnie.lienPhotoCompagnie }}" />
        </div>
    </div>

        <input type="hidden" name="csrf" value="{{ form.csrf.value }}">

    <input type="hidden" name="id" value="{{ compagnie.Id }}">

    <div class="form-group">
        <div class="col-sm-offset-4 col-sm-2">
            <button type="submit" name="submit" value="submit" class="btn btn-default" data-container="body"
                    data-toggle="popover" data-placement="bottom" data-content="Modifications enregistrÃ©es."
                    data-original-title="VALIDER !!!"
                    title="jjjjj">Modifier</button>
        </div>
    </div>

</form>

