<form name="addSpectForm" method="post" action="admin.php?route={{ typeAction }}Spectacle" class="form-horizontal"
      style="width: 200%;margin-top: 30px" xmlns="http://www.w3.org/1999/html">
    <div class="form-group">
        <label for="titreSpect" class="col-sm-2 control-label">Nom :</label>
        <div class="col-sm-2">
            <input type="text" class="form-control" name="titreSpect" id="titreSpect"
                   placeholder="Titre" value="{{ spectacle.titreSpect }}" />
        </div>
    </div>

    <div class="form-group">
        <label for="descriptionSpect" class="col-sm-2 control-label">Description :</label>
        <div class="col-sm-2">
            <textarea class="form-control" name="descriptionSpect" id="descriptionSpect" rows="13"
                   placeholder="PrÃ©sentation Spectacle"> "{{ spectacle.descriptionSpect }}" </textarea>
        </div>
    </div>

    <div class="form-group">
        <label for="photoSpect" class="col-sm-2 control-label">Photo :</label>
        <div class="col-sm-2">
            <input type="file" name="photoSpect" id="photoSpect"
                   value="{{ spectacle.photoSpect }}" />
        </div>
    </div>

        <input type="hidden" name="csrf" value="{{ form.csrf.value }}">

    <input type="hidden" name="id" value="{{ spectacle.Id }}">

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" name="submit" value="submit" class="btn btn-default">{{ titreButton }}</button>
        </div>
    </div>

</form>





<div class="row titre">
    <div class="col-xs-12 text-center">
        <h3>Liste des spectacles</h3>
    </div>
</div>

<div class="row">
    <div class="col-lg-10 col-lg-offset-1">
        {% for spectacle in spectacles %}
            <div class="col-lg-4 thumbnail text-center">
                <img src="{{ spectacle.PhotoSpect }}" alt="{{ spectacle.titreSpect }}">
                <h3>{{ spectacle.titreSpect }}</h3>
                <p>{{ spectacle.DescriptionSpect }}</p>

                <form action="admin.php" method="GET">
                    <input type="hidden" name="route" value="updateSpectacle">
                    <input type="hidden" name="id" value="{{ spectacle.Id }}">
                    <input class="btn btn-warning" type="submit" name="updateSpectacle" value="Modifier">
                </form>
                <form action="admin.php?route=deleteSpectacle" method="post">
                    <input type="hidden" name="id" value="{{ spectacle.Id }}">
                    <input class="btn btn-danger" type="submit" name="deleteSpectacle" value="Supprimer">
                </form>
            </div>
        {% endfor %}
    </div>

</div>